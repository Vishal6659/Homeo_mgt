
@{
    ViewData["Title"] = "Login Page";
    Layout = "_LoginLayout";
}

<style>
    .container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 500px;
        background: white;
        border-radius: 10px;
        overflow: hidden;
    }

        .container h2 {
            text-align: center;
            padding: 0 0 20px 0;
            margin-top: 20px;
        }

    .form-group {
        padding: 0 40px;
        box-sizing: border-box;
    }
    .btn{
        background: linear-gradient(135deg, #71b7e6, #9b59b6);
    }

    .btn:hover {
        background: linear-gradient(-135deg, #71b7e6, #9b59b6);
    }
</style>

<div class="container">
    <h2>
        Login Page
    </h2>
    <hr />
    <div class="form-group">
        <label class="control-label"><span style="color:red">*</span>Username</label>
        <input class="form-control" type="text" placeholder="Enter Username" />
    </div>
    <br />
    <div class="form-group">
        <label class="control-label"><span style="color:red">*</span>Password</label>
        <input class="form-control" type="password" placeholder="Enter Password" />
    </div>
    <br />
    <div class="form-group">
        <input class="form-control btn btn-primary" type="submit" />
    </div>
    <div class="form-group mt-1">
        <label class="control-label mb-4">Not a Member | <a href="@Url.Action("Registration", "Home")">Sign-In</a></label>
    </div>

</div>

